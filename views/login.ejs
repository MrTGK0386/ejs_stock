<!DOCTYPE html>
<html>
<%-include('base')-%>

<body class="d-flex flex-column min-vh-100">

<div class="container-fluid py-4">
    <div class="row justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow-sm login-card">
                <div class="card-body p-4">
                    <% if (redirect) { %>
                    <form method="post" action="/auth/login?redirect=<%=redirect%>" class="text-center login-form">
                        <% } else { %>
                        <form method="post" action="/auth/login" class="text-center login-form">
                            <% } %>
                        <div class="position-relative mb-4">
                            <img src="../style/images/logo.png"
                                 class="login-logo"
                                 alt="Logo">
                        </div>

                        <h1 class="login-title mb-3">Connectez-vous s'il vous pla√Æt</h1>

                        <% if (failed) {%>
                            <p class="login-error mb-3 text-danger">Email ou mot de passe incorrect</p>
                        <%}%>

                        <div class="form-floating mb-4 login-input-group">
                            <input type="text"
                                   class="form-control login-input"
                                   id="username"
                                   name="username"
                                   placeholder="n.prenom@mfgs.fr"
                                   required
                                   autofocus>
                            <label for="username">Adresse email</label>
                        </div>

                        <div class="form-floating mb-4 login-input-group">
                            <input type="password"
                                   class="form-control login-input"
                                   id="password"
                                   name="password"
                                   placeholder="Your Password"
                                   required>
                            <label for="password">Mot de passe</label>
                        </div>

                        <div class="d-grid gap-3 login-buttons">
                            <button class="btn btn-primary login-button" type="submit">
                                Se connecter
                            </button>
                            <button class="btn btn-secondary login-button-secondary"
                                    type="button"
                                    onclick="location.href='/auth/accountAsk'">
                                Demander un compte
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

</body>

<%-include('scripts')-%>
</html>