<!DOCTYPE html>
<html lang="fr">
<%-include('base')-%>

<body>
<%-include('header')%>
<div class="container-fluid py-3">
    <div class="row gy-3 scrollable-container">
        <div class="col-12">
            <!--Carte d'explication-->
            <div class="card d-flex flex-column justify-content-center align-items-center p-3">
                <div class="row w-100">
                    <div class="col-6 d-flex justify-content-center align-items-center">
                        <p class="m-0 fw-bold">Nom produit</p>
                    </div>
                    <div class="col-6 d-flex justify-content-center align-items-center">
                        <p class="m-0 fw-bold">Appellation</p>
                    </div>
                </div>
                <div class="row w-100 mt-3">
                    <div class="col-6 d-flex justify-content-center align-items-center">
                        <p class="m-0 fw-bold">Prix</p>
                    </div>
                    <div class="col-6 d-flex justify-content-center align-items-center">
                        <p class="m-0 fw-bold">Stock actuel</p>
                    </div>
                </div>
            </div>
            <% rows.forEach((product) => { %>
                <div class="card d-flex flex-column justify-content-center align-items-center p-3 my-1">
                    <div class="row w-100">
                        <div class="col-6 d-flex justify-content-center align-items-center">
                            <p class="m-0 text-truncate"><%=product.nom_produit%></p>
                        </div>
                        <div class="col-6 d-flex justify-content-center align-items-center">
                            <p class="m-0 text-truncate"><%=product.appellation%></p>
                        </div>
                    </div>
                    <div class="row w-100 mt-3">
                        <div class="col-6 d-flex justify-content-center align-items-center">
                            <p class="m-0"><%=product.prix%></p>
                        </div>
                        <div class="col-6 d-flex justify-content-center align-items-center">
                            <%if (product.stock <= product.stock_min){%>
                            <p class="m-0 text-danger fw-bold"><%=product.stock%></p>
                            <%} else {%>
                            <p class="m-0"><%=product.stock%></p>
                            <%}%>
                        </div>
                    </div>
                </div>
            <%});%>
        </div>
    </div>
</div>

</body>

<%- include('scripts')-%>
</html>